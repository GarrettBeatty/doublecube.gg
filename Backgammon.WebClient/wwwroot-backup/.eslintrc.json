{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "script"
  },
  "globals": {
    "signalR": "readonly"
  },
  "rules": {
    "no-undef": "error",
    "no-unused-vars": ["error", {
      "argsIgnorePattern": "^_|^e$",
      "varsIgnorePattern": "^_"
    }],
    "no-useless-escape": "error",
    "no-case-declarations": "off"
  }
}
